    <div class="col-xs-12 p-0">
        <label for="control_<%= row.IDAttributo %>" class="col-form-label">
            <%= row.Description %>
        </label>
    </div>
    <div class="col-xs-12 border rounded p-0">
        <div class="col-xs-11 p-0"> 
            <div class="col-xs-12 p-0 control_<%= row.IDAttributo %>">
            </div>
        </div>
        <div class="col-xs-1 p-0">
            <input type="text" style="float:right; width:0 !important; background-color:transparent;" <% if (row.Obbligatorio) { %> required<% } %>
