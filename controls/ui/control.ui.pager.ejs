<style type="text/css">
    .form-group {
        display: block;
        margin-bottom: 5px;
        float: left;
    }
    .form-group a {
        cursor: pointer;
    }
</style>
<div class="pager">
    <div class="form-inline">
        <div class="form-group">
            <% if (LanguageContext == "IT") { %>
                Pagina
            <% } %>
            <% if (LanguageContext == "GB") { %>
                Page
            <% } %>
            <% if (LanguageContext == "ES") { %>
                P&aacute;gina
            <% } %>
            <% if (LanguageContext == "CN") { %>
                頁
            <% } %>
            &nbsp; <input type="text" class="pageIndex mini" size="3" disabled="disabled" />&nbsp;
            <% if (LanguageContext == "IT") { %>
                di
            <% } %>
            <% if (LanguageContext == "GB") { %>
                of
            <% } %>
            <% if (LanguageContext == "ES") { %>
                de
            <% } %>
            <% if (LanguageContext == "CN") { %>
                /
            <% } %>
            &nbsp;<strong><label class="totalPage roboto-font"></label></strong>&nbsp;&nbsp;
            <i class="spinner-border text-primary mt-3" role="status" style="display:block; float:right;"></i>
        </div>
        <div class="form-group">
            &nbsp;<a class="btn btn-prev btn-default pulsante btn-xs" title="Pagina precedente">
            <% if (LanguageContext == "IT") { %>
                Precedente
            <% } %>
            <% if (LanguageContext == "GB") { %>
                Previous
            <% } %>
            <% if (LanguageContext == "ES") { %>
                Anterior
            <% } %>
            <% if (LanguageContext == "CN") { %>
                以前的
            <% } %>
            </a>&nbsp;
        </div>
        <div class="form-group col-xs-empty">
            &nbsp;<a class="btn btn-next btn-default pulsante btn-xs" title="Pagina successiva">
            <% if (LanguageContext == "IT") { %>
                Successiva
            <% } %>
            <% if (LanguageContext == "GB") { %>
                Next
            <% } %>
            <% if (LanguageContext == "ES") { %>
                Pr&oacute;ximo
            <% } %>
            <% if (LanguageContext == "CN") { %>
                下一個
            <% } %>
            </a>&nbsp;
        </div>
        <div class="form-group container-totalRecord" style="float:right;">
            <% if (LanguageContext == "IT") { %>
                Record Totali
            <% } %>
            <% if (LanguageContext == "GB") { %>
                Total Records
            <% } %>
            <% if (LanguageContext == "ES") { %>
                Registros totales
            <% } %>
            <% if (LanguageContext == "CN") { %>
                總記錄數
            <% } %>
            <span class="totalRecord" style="font-weight:bold;"></span>
        </div>
    </div>
</div>